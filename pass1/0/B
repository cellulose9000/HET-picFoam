FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      B;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 0 -2 0 0 -1 0];

internalField   uniform (0 0 0);

boundaryField
{
    leftBoundary //trying to make a wraparound magnetic field
    {
        type            fixedValue;
        value           uniform (0.01 0 0);
    }
    rightBoundary
    {
        type            fixedValue;
        value           uniform (-0.01 0 0);
    }
    upperBoundary
    {
        type            fixedValue;
        value           uniform (0 -0.01 0)
    }
    lowerBoundary
    {
        type            fixedValue;
        value           uniform (0 0.01 0);
    }
}


