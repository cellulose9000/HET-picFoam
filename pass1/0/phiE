FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      phiE;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 2 -3 0 0 -1 0];

internalField   uniform 0;

boundaryField
{
    backBoundary
    {
        type            fixedValue;
        value           uniform -270;
    }
    leftBoundary
    {
        type            fixedValue;
        value           uniform 0;
    }
    rightBoundary
    {
        type            fixedValue;
        value           uniform 0;
    }
    emptyBoundary
    {
        type            empty;
    }
}


