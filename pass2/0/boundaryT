FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      boundaryT;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

const scalar evtoK = 0.116049e5;

boundaryField
{
    cathode
    {
        type            fixedValue;
        value           uniform 2.25*evtoK;
    }
    anode
    {
        type            fixedValue;
        value           uniform 0.1*evtoK;
    }
    InnerPole
    {
        type            fixedValue;
        value           uniform 700;
    }
    OuterPole
    {
        type            fixedValue;
        value           uniform 700;
    }
    freeSpace
    {
        type            zeroGradient;
    }
    centerline
    {
        type            symmetryPlane;
    }
}


